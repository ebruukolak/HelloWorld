@model Northwind.Entities.User
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12 col-sm-12 mb">
    <div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-md-offset-1 box0">
                @using (Html.BeginForm())
                {
                   @Html.ValidationSummary();
                    <table class="table">
                        <tr>
                            <td scope="col">@Html.DisplayNameFor(m => m.Username) </td>
                            <td>@Html.TextBoxFor(m => m.Username) </td>
                        </tr>
                        <tr>
                            <td scope="col">@Html.DisplayNameFor(m => m.Password)</td>
                            <td>@Html.TextBoxFor(m => m.Password) </td>
                        </tr>
                        <tr>
                            <td><input class="btn btn-primary" type="submit" value="Login" /></td>
                        </tr>
                    </table>
                }
            </div>
        </div>

    </div>
</div>

